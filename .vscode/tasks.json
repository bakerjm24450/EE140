{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "g++",
            "windows": {
                "args": [
                    "-g",
                    "${relativeFileDirname}/build/*.o",
                    "-o", "${relativeFileDirname}/build/${relativeFileDirname}.exe",
                    "-lsfml-graphics",
                    "-lsfml-window",
                    "-lsfml-system"
                ]
            },
            "osx": {
                "args": [
                    "-D", "GL_SILENCE_DEPRECATION",
                    "-g",
                    "${relativeFileDirname}/build/*.o",
                    "-o", "${relativeFileDirname}/build/${relativeFileDirname}",
                    "-framework", "OpenGL",
                    "-lsfml-graphics",
                    "-lsfml-window",
                    "-lsfml-system"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Compile C++ files",
                "Compile C files"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Compile C++ files",
            "type": "shell",
            "command": "g++",
            "args": [
                "-D",
                "GL_SILENCE_DEPRECATION",
                "-g",
                "-std=c++17",
                "-I${workspaceFolder}/imgui",
                "../*.cpp",
                "../../imgui/*.cpp",
                "-c",
            ],
            "options": {
                "cwd": "${fileDirname}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOrder": "sequence",
            "dependsOn": "Create build directory"
        },
        {
            "label": "Compile C files",
            "type": "shell",
            "command": "g++",
            "args": [
                "-D", "GL_SILENCE_DEPRECATION",
                "-g",
                "-I${workspaceFolder}/imgui",
                "-x", "c", "../*.c",
                "-x", "c", "../../imgui/*.c",
                "-c",
            ],
            "options": {
                "cwd": "${fileDirname}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOrder": "sequence",
            "dependsOn": "Create build directory"
        },
        {
            "label": "Create build directory",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "${relativeFileDirname}/build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}